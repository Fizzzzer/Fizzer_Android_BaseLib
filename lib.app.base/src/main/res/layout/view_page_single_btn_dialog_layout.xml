<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/xml_bg_white_rad"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_15_dp"
        android:layout_marginLeft="@dimen/value_30_dp"
        android:layout_marginRight="@dimen/value_30_dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/value_25_dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/value_15_dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/value_18_sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/value_5_dp"
            android:text="内容"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/value_15_sp"
            android:visibility="visible"/>
    </LinearLayout>

    <View
        style="@style/NormalDiv_1_div"/>

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_50_dp"
        android:gravity="center"
        android:text="@string/tip_confirm"
        android:textColor="@color/main_color"
        android:textSize="@dimen/value_18_sp"/>

</LinearLayout>
